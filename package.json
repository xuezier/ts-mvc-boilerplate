  "dependencies": {
    "mvc-ts": "^1.1.3"
  },
  "devDependencies": {
    "jest": "^24.6.0",
    "@types/node": "^11.13.0",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.1"
  }
}
