{
  "name": "ts-mvc-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for ts-mvc",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node -P tsconfig.json index.ts",
    "dev": "nodemon --exec 'ts-node' -P tsconfig.json index.ts",
